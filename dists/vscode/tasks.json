{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile DLL",
            "type": "shell",
            "windows": {
                "command": "dists/atom/windows/compile.bat . compile-dll"
            },
            "linux": {
                "command": "dists/atom/linux/compile.sh . compile-so"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "external",
                "pattern": {
                    "regexp": "^([\\w]+\\.(p|pp|pas))\\((\\d+)\\,(\\d+)\\)\\s(Fatal|Error|Warning|Note):(.*)",
                    "file": 1,
                    "line": 3,
                    "column": 4,
                    "message": 6
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
